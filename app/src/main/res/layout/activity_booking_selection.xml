<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_vertical"
    android:layout_marginLeft="0dp"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:textAlignment="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/map_layout"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/solid_blue_background">

        <ImageView
            android:id="@+id/BookingPreference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/world" />

        <TextView
            android:id="@+id/booking_Preference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Choose Your Preference for Booking"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.741" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="457dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="317dp"
            android:layout_height="180dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="60dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/air_selectionbtn" />

        <Button
            android:id="@+id/buttonFlightBooking"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="40dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:text="Flight Ticket Booking"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="329dp"
            android:layout_height="180dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/rail_selectionbtn" />

        <Button
            android:id="@+id/buttonTrainBooking"
            android:layout_width="318dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:layout_marginRight="2dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Train Ticket Booking"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>